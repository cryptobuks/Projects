<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="pack_70_transactions.pack_30_aop.Product" table="products">
      <id name="id" type="int" column="product_id">
         <generator class="assigned" />
      </id>

	<property name="name">
		<column name="product_nm" length="20"/>
	</property>
	<property name="description">
		<column name="product_desc" length="30"/>
	</property>
	<property name="price">
		<column name="product_price"/>
	</property>
	<property name="quantity">
		<column name="product_qty" length="8"/>
	</property>
   </class>

</hibernate-mapping>
